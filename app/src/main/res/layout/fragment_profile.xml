<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/card_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:scaleX="0.3"
            android:scaleY="0.3"
            android:visibility="visible"
            tools:srcCompat="@drawable/frame_0" />

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableRow
                        android:id="@+id/day_tr"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/day_img"
                            android:layout_width="88dp"
                            android:layout_height="88dp"
                            app:srcCompat="@drawable/badge_icon_0" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/day_txt"
                                android:layout_width="match_parent"
                                android:layout_height="55dp"
                                android:gravity="bottom|center_horizontal"
                                android:text="TextView"
                                android:textSize="22dp" />

                            <ProgressBar
                                android:id="@+id/day_pb"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="281dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp" />
                        </LinearLayout>

                    </TableRow>

                    <TableRow
                        android:id="@+id/level_tr"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/level_img"
                            android:layout_width="88dp"
                            android:layout_height="88dp"
                            app:srcCompat="@drawable/badge_icon_1" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/level_txt"
                                android:layout_width="match_parent"
                                android:layout_height="55dp"
                                android:gravity="bottom|center_horizontal"
                                android:text="TextView"
                                android:textSize="22dp" />

                            <ProgressBar
                                android:id="@+id/level_pb"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="281dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp" />
                        </LinearLayout>

                    </TableRow>

                    <TableRow
                        android:id="@+id/distance_tr"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/distance_img"
                            android:layout_width="88dp"
                            android:layout_height="88dp"
                            app:srcCompat="@drawable/badge_icon_2" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/distance_txt"
                                android:layout_width="match_parent"
                                android:layout_height="55dp"
                                android:gravity="bottom|center_horizontal"
                                android:text="TextView"
                                android:textSize="22dp" />

                            <ProgressBar
                                android:id="@+id/distance_pb"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="281dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp" />
                        </LinearLayout>

                    </TableRow>

                    <TableRow
                        android:id="@+id/step_tr"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/step_img"
                            android:layout_width="88dp"
                            android:layout_height="88dp"
                            app:srcCompat="@drawable/badge_icon_3" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/step_txt"
                                android:layout_width="match_parent"
                                android:layout_height="55dp"
                                android:gravity="bottom|center_horizontal"
                                android:text="TextView"
                                android:textSize="22dp" />

                            <ProgressBar
                                android:id="@+id/step_pb"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="281dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp" />
                        </LinearLayout>

                    </TableRow>

                    <TableRow
                        android:id="@+id/development_tr"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/development_img"
                            android:layout_width="88dp"
                            android:layout_height="88dp"
                            app:srcCompat="@drawable/badge_icon_4" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/development_txt"
                                android:layout_width="match_parent"
                                android:layout_height="55dp"
                                android:gravity="bottom|center_horizontal"
                                android:text="TextView"
                                android:textSize="22dp" />

                            <ProgressBar
                                android:id="@+id/development_pb"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="281dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp" />
                        </LinearLayout>

                    </TableRow>

                    <TableRow
                        android:id="@+id/calorie_tr"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/calorie_img"
                            android:layout_width="88dp"
                            android:layout_height="88dp"
                            app:srcCompat="@drawable/badge_icon_5" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/calorie_txt"
                                android:layout_width="match_parent"
                                android:layout_height="55dp"
                                android:gravity="bottom|center_horizontal"
                                android:text="TextView"
                                android:textSize="22dp" />

                            <ProgressBar
                                android:id="@+id/calorie_pb"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="281dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp" />
                        </LinearLayout>

                    </TableRow>

                    <TableRow
                        android:id="@+id/friend_tr"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/friend_img"
                            android:layout_width="88dp"
                            android:layout_height="88dp"
                            app:srcCompat="@drawable/badge_icon_6" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/friend_txt"
                                android:layout_width="match_parent"
                                android:layout_height="55dp"
                                android:gravity="bottom|center_horizontal"
                                android:text="TextView"
                                android:textSize="22dp" />

                            <ProgressBar
                                android:id="@+id/friend_pb"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="281dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp" />
                        </LinearLayout>

                    </TableRow>

                    <TableRow
                        android:id="@+id/event_tr"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/event_img"
                            android:layout_width="88dp"
                            android:layout_height="88dp"
                            app:srcCompat="@drawable/badge_icon_7" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/event_txt"
                                android:layout_width="match_parent"
                                android:layout_height="55dp"
                                android:gravity="bottom|center_horizontal"
                                android:text="TextView8"
                                android:textSize="22dp" />

                            <ProgressBar
                                android:id="@+id/event_pb"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="281dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp" />
                        </LinearLayout>

                    </TableRow>

                </TableLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/back_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
