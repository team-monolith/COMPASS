<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/frame_img0"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/card_background_0" />

            <ImageView
                android:id="@+id/frame_img1"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/card_background_1" />

            <ImageView
                android:id="@+id/frame_img2"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/card_background_2" />

            <ImageView
                android:id="@+id/frame_img3"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/card_background_3" />

            <ImageView
                android:id="@+id/frame_img4"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/card_background_4" />

            <ImageView
                android:id="@+id/frame_img5"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/card_background_5" />

            <ImageView
                android:id="@+id/frame_img6"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/card_background_6" />

            <ImageView
                android:id="@+id/frame_img7"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/card_background_7" />

            <ImageView
                android:id="@+id/frame_img8"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/card_background_8" />

            <ImageView
                android:id="@+id/frame_img9"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/card_background_9" />

            <ImageView
                android:id="@+id/frame_img10"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/card_background_10" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
