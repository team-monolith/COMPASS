<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_profile">

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.monolith.compass.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_navigation_profile_to_navigation_fitness"
            app:destination="@id/navigation_fitness" />
        <action
            android:id="@+id/action_navigation_profile_to_navigation_setting"
            app:destination="@id/navigation_setting" />
        <action
            android:id="@+id/action_navigation_profile_to_navigation_friend"
            app:destination="@id/navigation_friend" />
        <action
            android:id="@+id/action_navigation_profile_to_navigation_navchoice"
            app:destination="@id/navigation_navchoice" />
        <action
            android:id="@+id/action_navigation_profile_to_navigation_profile_edit"
            app:destination="@id/navigation_profile_edit"
            />
    </fragment>

    <fragment
        android:id="@+id/navigation_fitness"
        android:name="com.monolith.compass.ui.fitness.FitnessFragment"
        android:label="@string/title_fitness"
        tools:layout="@layout/fragment_fitness" >
        <action
            android:id="@+id/action_navigation_fitness_to_navigation_profile"
            app:destination="@id/navigation_profile" />
        <action
            android:id="@+id/action_navigation_fitness_to_navigation_friend"
            app:destination="@id/navigation_friend" />
        <action
            android:id="@+id/action_navigation_fitness_to_navigation_setting"
            app:destination="@id/navigation_setting" />
        <action
            android:id="@+id/action_navigation_fitness_to_navigation_navchoice"
            app:destination="@id/navigation_navchoice" />
    </fragment>

    <fragment
        android:id="@+id/navigation_navchoice"
        android:name="com.monolith.compass.ui.map.NavChoiceFragment"
        android:label="@string/title_nav_choice"
        tools:layout="@layout/fragment_nav_choice" >
        <action
            android:id="@+id/action_navigation_navchoice_to_navigation_friend"
            app:destination="@id/navigation_friend" />
        <action
            android:id="@+id/action_navigation_navchoice_to_navigation_setting"
            app:destination="@id/navigation_setting" />
        <action
            android:id="@+id/action_navigation_navchoice_to_navigation_fitness"
            app:destination="@id/navigation_fitness" />
        <action
            android:id="@+id/action_navigation_navchoice_to_navigation_profile"
            app:destination="@id/navigation_profile" />
        <action
            android:id="@+id/action_navigation_navchoice_to_navigation_map"
            app:destination="@id/navigation_map" />
        <action
            android:id="@+id/action_navigation_navchoice_to_navigation_event3"
            app:destination="@id/navigation_event" />
    </fragment>

    <fragment
        android:id="@+id/navigation_map"
        android:name="com.monolith.compass.ui.map.MapFragment"
        android:label="@string/title_map"
        tools:layout="@layout/fragment_map" >
        <action
            android:id="@+id/action_navigation_map_to_navigation_navchoice"
            app:destination="@id/navigation_navchoice" />
        <action
            android:id="@+id/action_navigation_map_to_navigation_friend"
            app:destination="@id/navigation_friend" />
        <action
            android:id="@+id/action_navigation_map_to_navigation_setting"
            app:destination="@id/navigation_setting" />
