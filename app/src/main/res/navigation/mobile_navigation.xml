        android:label="@string/title_setting"
        tools:layout="@layout/fragment_setting" >
        <action
            android:id="@+id/action_navigation_setting_to_navigation_profile"
            app:destination="@id/navigation_profile" />
        <action
            android:id="@+id/action_navigation_setting_to_navigation_fitness"
            app:destination="@id/navigation_fitness" />
        <action
            android:id="@+id/action_navigation_setting_to_navigation_friend"
            app:destination="@id/navigation_friend" />
        <action
            android:id="@+id/action_navigation_setting_to_navigation_navchoice"
            app:destination="@id/navigation_navchoice" />
    </fragment>

    <fragment
        android:id ="@+id/navigation_profile_edit"
        android:name="com.monolith.compass.ui.profile.Prof_Edit_Fragment"
        android:label="ProfileEdit"
        tools:layout="@layout/fragment_profile_edit">

        <action
            android:id="@+id/action_navigation_profile_edit_to_navigation_profile"
            app:destination="@id/navigation_profile" />
    </fragment>
</navigation>