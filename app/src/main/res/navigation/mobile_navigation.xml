            android:id="@+id/action_navigation_event_to_navigation_fitness"
            app:destination="@id/navigation_fitness" />
    </fragment>

    <fragment
        android:id="@+id/navigation_friend"
        android:name="com.monolith.compass.ui.friend.FriendFragment"
        android:label="@string/title_friend"
        tools:layout="@layout/fragment_friend" >
        <action
            android:id="@+id/action_navigation_friend_to_navigation_profile"
            app:destination="@id/navigation_profile" />
