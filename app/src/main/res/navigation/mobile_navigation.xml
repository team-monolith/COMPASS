            android:id="@+id/action_navigation_map_to_navigation_profile"
            app:destination="@id/navigation_profile" />
        <action
            android:id="@+id/action_navigation_map_to_navigation_fitness"
            app:destination="@id/navigation_fitness" />
    </fragment>

    <fragment
        android:id="@+id/navigation_event"
        android:name="com.monolith.compass.ui.map.EventFragment"
        android:label="@string/title_event"
        tools:layout="@layout/fragment_event" >
